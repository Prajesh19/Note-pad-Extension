{
  "manifest_version": 3,
  "name": "Multi-Theme Notepad",
  "version": "1.0",
  "description": "A simple notepad with multiple themes that saves your notes automatically.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons16.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    }
  },
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  }
}

